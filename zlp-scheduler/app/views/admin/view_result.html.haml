%html
  %head
    // %link{:href => "specialTable.css", :rel => "stylesheet"}
    %title Admin View Result
  %body
    %h1{:style => "text-align:center"} Algorithm Result
    %h3{:style => "text-align:left"} Non-conflicted Time Slots
    %table#resultTable
      %tr
        %th#specialTableHeader Day
        %th#specialTableHeader Time
        %th#specialTableHeader Option
      -@results.each do |result|
        %tr
          %td#specialTableData #{result.day} 
          %td#specialTableData #{result.time}
          %td#specialTableData
            = button_to "Choose", view_conflicts_path(@cohort.id), method: :get, form_class: "choosebtn"
    %h3{:style => "text-align:left"}
      Conflicted Time Slots
    %table#conflictTable
      %tr
        %th#specialTableHeader Day
        %th#specialTableHeader Time
        %th#specialTableHeader Option
      -@conflict.each do |conf|
        %tr
          %td#specialTableData #{conf.day}
          %td#specialTableData #{conf.time}
          %td#specialTableData
            = button_to "Choose", view_conflicts_path(@cohort.id), method: :get, form_class: "choosebtn"
