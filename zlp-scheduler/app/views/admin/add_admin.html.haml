%div#addAdminDiv  
    %h1{:style => "text-align:center"} Add Administrator
    = form_for @user do |f|
        %table#userTable
            %tr
                %th#specialTableHeader First Name
                %th#specialTableHeader Last Name
                %th#specialTableHeader TAMU Email
                %th#specialTableHeader UIN
            %tr
                %td#specialTableData
                    = f.text_field :firstname
                %td#specialTableData
                    = f.text_field :lastname
                %td#specialTableData
                    = f.text_field :email
                %td#specialTableData
                    = f.text_field :uin
        %br
        = f.submit "Create", :class => 'button_link'
        = link_to "Cancel", view_term_admin_path, :class => 'button_link'